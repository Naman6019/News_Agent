# -------------------------------
# Background Digest Worker + Ollama
# -------------------------------
FROM python:3.11-slim

WORKDIR /app
COPY . /app

# Install Ollama and dependencies
RUN apt-get update && apt-get install -y curl git ca-certificates && \
    curl -fsSL https://ollama.com/install.sh | bash && \
    rm -rf /var/lib/apt/lists/*

COPY requirements-digest.txt .
RUN pip install --no-cache-dir -r requirements-digest.txt

# Copy application code
COPY . .

# Expose Ollama API port
EXPOSE 11434

# Run Ollama, pull model, and start digest script
CMD ["sh", "-c", "\
echo 'ðŸš€ Starting Ollama server...' && \
ollama serve & \
sleep 10 && \
echo 'ðŸ“¥ Pulling model gemma3:1b...' && \
ollama pull gemma3:1b && \
echo 'âœ… Model ready. Starting News Digest service...' && \
python /app/app/send_digest.py"]
