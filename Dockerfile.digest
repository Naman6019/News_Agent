# -------------------------------
# Background Digest Worker + Ollama
# -------------------------------
FROM python:3.11-slim

WORKDIR /app

# Install Ollama and dependencies
RUN apt-get update && apt-get install -y curl git ca-certificates && \
    curl -fsSL https://ollama.com/install.sh | bash && \
    rm -rf /var/lib/apt/lists/*

COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

COPY . .

# Expose Ollama API port
EXPOSE 11434

# Start Ollama first, wait for it to be ready, then pull the model & start the digest service
CMD ["sh", "-c", "\
ollama serve & \
sleep 5 && \
echo 'Pulling model gemma3:1b...' && \
ollama pull gemma3:1b && \
echo 'Starting digest scheduler...' && \
python app/services/send_digest.py"]
