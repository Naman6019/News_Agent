# -----------------------------------
# AI News Digest Worker Dockerfile (Final)
# -----------------------------------
FROM ollama/ollama:latest

WORKDIR /app
ENV PYTHONPATH=/app
COPY . /app

RUN apt-get update && \
    apt-get install -y --no-install-recommends python3-venv curl bash && \
    apt-get upgrade -y && \
    rm -rf /var/lib/apt/lists/* && \
    python3 -m venv /opt/venv

ENV PATH="/opt/venv/bin:$PATH"

COPY requirements-digest.txt /app/requirements-digest.txt
RUN pip install --upgrade pip setuptools wheel && \
    pip install --no-cache-dir -r /app/requirements-digest.txt

COPY docker-entrypoint.sh /usr/local/bin/docker-entrypoint.sh
RUN chmod +x /usr/local/bin/docker-entrypoint.sh

EXPOSE 11434
ENTRYPOINT ["/usr/local/bin/docker-entrypoint.sh"]