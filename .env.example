# ------------------------------
# Project Settings
# ------------------------------
PROJECT_NAME="AI News Agent"
VERSION="1.0.0"
DEBUG=false

# ------------------------------
# Server Settings
# ------------------------------
SERVER_NAME=localhost
SERVER_HOST=http://localhost
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# ------------------------------
# API URL (used by send_digest.py)
# ------------------------------
API_URL=https://your-render-app-name.onrender.com

# ------------------------------
# Ollama Configuration
# ------------------------------
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=gemma3:1b
OLLAMA_MAX_TOKENS=500
OLLAMA_TEMPERATURE=0.3

# ------------------------------
# Twilio WhatsApp Configuration
# ------------------------------
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=whatsapp:+14155238886
WHATSAPP_RECIPIENT_NUMBER=whatsapp:+91xxxxxxxxxx

# ------------------------------
# RSS Feed Settings
# ------------------------------
RSS_FETCH_TIMEOUT=30
RSS_MAX_ARTICLES_PER_FEED=10
RSS_CACHE_TTL=3600

# ------------------------------
# Scheduling (IST)
# ------------------------------
MORNING_DELIVERY_HOUR=8
EVENING_DELIVERY_HOUR=18
DELIVERY_TIMEZONE=Asia/Calcutta

# ------------------------------
# Message Settings
# ------------------------------
MAX_SUMMARY_LENGTH=200
MAX_ARTICLES_PER_MESSAGE=5
MESSAGE_LANGUAGE=english

# ------------------------------
# Optional Database
# ------------------------------
# DATABASE_URL=postgresql://user:password@localhost/news_agent
# REDIS_URL=redis://localhost:6379

# ------------------------------
# Logging
# ------------------------------
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# ------------------------------
# Port (for Render or Docker)
# ------------------------------
PORT=10000

# ------------------------------
# Optional OpenAI Key (if used)
# ------------------------------
OPENAI_API_KEY=
